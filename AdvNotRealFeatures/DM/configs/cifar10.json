{
  "train": {
    "lr": 2e-4,
    "batch_size": 128,
    "grad_norm": 1.0,
    "epochs": 1000,
    "warmup": 5000
  },
  "denoise": {
    "in_channels": 3,
    "hid_channels": 128,
    "ch_multipliers": [1, 2, 2, 2],
    "num_res_blocks": 2,
    "apply_attn": [false, true, false, false],
    "drop_rate": 0.1
  },
  "diffusion": {
    "timesteps": 1000,
    "beta_start": 0.0001,
    "beta_end": 0.02,
    "beta_schedule": "linear",
    "model_mean_type": "eps",
    "model_var_type": "fixed-large",
    "loss_type": "mse"
  }
}